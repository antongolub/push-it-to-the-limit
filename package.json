{
  "name": "push-it-to-the-limit",
  "version": "1.14.0",
  "description": "Delay function wrappers for common purposes. Throttle, debounce and ratelimit with promises",
  "main": "target/es5/bundle.js",
  "types": "target/es5/index.d.ts",
  "typescript": {
    "definition": "target/es5/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf target",
    "lint": "standard src/**/*.js",
    "lint:fix": "yarn lint -- --fix",
    "jest": "jest -w 2 --detectOpenHandles",
    "test": "yarn lint && yarn jest",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs && yarn build:rollup && yarn uglify",
    "build:rollup": "rollup -c",
    "bundle:min": "BABEL_ENV=production babel target/es5/bundle.js --out-file target/es5/bundle.min.js",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.json src/main --ignoreCompilerErrors || exit 0",
    "postupdate": "yarn && npx yarn-audit-fix && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/push-it-to-the-limit.git"
  },
  "keywords": [
    "throttle",
    "debounce",
    "rate limit",
    "delay",
    "frequency limiter",
    "slow down",
    "promised delay",
    "interrelated delay",
    "push-it-to-the-limit",
    "pittl"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/push-it-to-the-limit/issues"
  },
  "homepage": "https://github.com/antongolub/push-it-to-the-limit#readme",
  "dependencies": {
    "@antongolub/repeater": "^1.3.0"
  },
  "devDependencies": {
    "@qiwi/libdefkit": "^2.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "@semantic-release/npm": "^7.0.6",
    "@swissquote/crafty-preset-jest": "^1.13.4",
    "@types/jest": "^26.0.14",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.1.0",
    "jest": "26.5.3",
    "rollup": "^2.31.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.2.1",
    "standard": "^14.3.4",
    "terser": "^5.3.5",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.3"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "flow-typed",
    "typings"
  ],
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/main/js/interface.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/main/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/src/test/**/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "it",
      "expect",
      "describe",
      "before",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "after",
      "afterEach",
      "TimeoutID"
    ],
    "ignore": []
  }
}
