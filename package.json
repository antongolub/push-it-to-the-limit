{
  "name": "push-it-to-the-limit",
  "version": "1.12.2",
  "description": "Delay function wrappers for common purposes. Throttle, debounce and ratelimit with promises",
  "main": "target/es5/bundle.min.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf target",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/main/**/*.js' -t html -t json -t text --threshold 90",
    "lint": "standard src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "jest": "BABEL_ENV=test jest -w 1 --detectOpenHandles",
    "test": "npm run lint && npm run flow && npm run flow:coverage && npm run jest",
    "test:report": "npm test && npm run coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "build": "npm run clean && npm run build:rollup && npm run build:babel",
    "build:babel": "BABEL_ENV=production babel src/main/js --out-dir target/es5",
    "build:rollup": "rollup -c && npm run bundle:min",
    "bundle:min": "BABEL_ENV=production babel target/es5/bundle.js --out-file target/es5/bundle.min.js",
    "doc": "esdoc",
    "postupdate": "npm i && npm audit fix && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/push-it-to-the-limit.git"
  },
  "keywords": [
    "throttle",
    "debounce",
    "rate limit",
    "delay",
    "frequency limiter",
    "slow down",
    "promised delay",
    "interrelated delay",
    "push-it-to-the-limit js",
    "pittl"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/push-it-to-the-limit/issues"
  },
  "homepage": "https://github.com/antongolub/push-it-to-the-limit#readme",
  "dependencies": {
    "@antongolub/repeater": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-external-helpers": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-flow-strip-types": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-flow": "^7.10.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "@semantic-release/npm": "^7.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-minify": "^0.5.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.1.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "flow-bin": "^0.135.0",
    "flow-coverage-report": "^0.8.0",
    "flow-remove-types": "^2.135.0",
    "jest": "26.5.3",
    "rollup": "^2.29.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^17.2.1",
    "standard": "^14.3.4"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "flow-typed",
    "typings"
  ],
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/main/js/interface.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/main/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/src/test/**/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "jest",
      "it",
      "expect",
      "describe",
      "before",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "after",
      "afterEach",
      "TimeoutID"
    ],
    "rules": {
      "use-flow-type": 1
    },
    "ignore": [],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
