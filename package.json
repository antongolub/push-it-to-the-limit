{
  "name": "push-it-to-the-limit",
  "version": "1.17.3",
  "description": "Delay function wrappers for common purposes. Throttle, debounce and ratelimit with promises",
  "main": "./target/es5/index.js",
  "exports": {
    ".": {
      "import": "./target/es6/index.mjs",
      "require": "./target/es5/index.js"
    }
  },
  "types": "target/es5/index.d.ts",
  "typescript": {
    "definition": "target/es5/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf target",
    "lint": "eslint 'src/**/*.+(js|ts)'",
    "lint:fix": "yarn lint --fix",
    "jest": "jest --runInBand --detectOpenHandles",
    "test": "yarn lint && yarn jest",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "build:esmfix": "yarn tsc-esm-fix --target=target/es6 --ext=.mjs",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:esmfix && yarn build:ts && yarn build:libdef && yarn docs && yarn uglify",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "docs": "typedoc",
    "postupdate": "yarn && npm_config_yes=true npx yarn-audit-fix && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/push-it-to-the-limit.git"
  },
  "keywords": [
    "throttle",
    "debounce",
    "rate limit",
    "ratelimit",
    "delay",
    "frequency limiter",
    "slow down",
    "promised delay",
    "interrelated delay",
    "push-it-to-the-limit",
    "pittl"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/push-it-to-the-limit/issues"
  },
  "homepage": "https://github.com/antongolub/push-it-to-the-limit#readme",
  "dependencies": {
    "@antongolub/repeater": "^1.5.1"
  },
  "devDependencies": {
    "@qiwi/libdefkit": "^4.0.8",
    "@qiwi/substrate": "^1.20.16",
    "@swissquote/crafty-preset-jest": "^1.20.0",
    "@types/jest": "^29.2.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.28.0",
    "eslint-config-qiwi": "^2.0.1",
    "jest": "29.3.1",
    "terser": "^5.16.0",
    "ts-jest": "^29.0.3",
    "tsc-esm-fix": "^2.20.7",
    "typedoc": "^0.24.0",
    "typescript": "^4.9.3"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "flow-typed",
    "typings"
  ]
}
